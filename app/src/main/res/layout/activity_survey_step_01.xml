<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_activity_register"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/root_coordinator_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.example.pet.SurveyStep01">

            <ImageButton
                android:id="@+id/imageButtonBackButtonStep01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:background="@color/cardview_shadow_end_color"
                android:contentDescription="@string/description_button_back"
                android:src="@drawable/back_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewProgressBarStep01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonBackButtonStep01"
                app:srcCompat="@drawable/progress_bar_screen_born" />

            <TextView
                android:id="@+id/textViewQustionStep01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="88dp"
                android:fontFamily="@font/pt_serif_bold"
                android:text="@string/text_when_were_you_born"
                android:textColor="@color/white_text_step01"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewProgressBarStep01" />

            <TextView
                android:id="@+id/textViewDescriptionStep01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/pt_sans"
                android:text="@string/text2_born_activity"
                android:textColor="@color/color_text_step01"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewQustionStep01" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="84dp"
                android:layout_marginEnd="84dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/buttonCreateAccountStep01"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionStep01"
                app:srcCompat="@drawable/bg_for_burn_data" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:contentDescription="text"
                app:layout_constraintBottom_toTopOf="@+id/buttonCreateAccountStep01"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionStep01"
                app:np_dividerColor="#00FFFFFF"
                app:np_height="180dp"
                app:np_itemSpacing="10dp"
                app:np_max="2024"
                app:np_min="1900"
                app:np_selectedTextColor="@color/color_np_selectedTextColor_step01"
                app:np_selectedTextSize="28sp"
                app:np_textColor="@color/color_np_textColorstep01"
                app:np_textSize="24sp"
                app:np_value="2024"
                app:np_wheelItemCount="5"
                app:np_width="64dp"
                tools:ignore="MissingClass" />

            <Button
                android:id="@+id/buttonCreateAccountStep01"
                style="@style/ButtonCreateAccount"
                android:layout_marginStart="20dp"
                android:layout_marginTop="688dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>
